<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="LiveCharts Example" Height="350" Width="525">
    <Grid>
        <lvc:CartesianChart Name="cartesianChart"/>
        <ComboBox x:Name="AlgorithmComboBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Margin="10">
            <ComboBoxItem Content="Функция константы" />
            <ComboBoxItem Content="Сумма элементов" />
            <ComboBoxItem Content="Произведение элементов" />
            <ComboBoxItem Content="Полином (Наивный)" />
            <ComboBoxItem Content="Полином (Горнер)" />
            <ComboBoxItem Content="Bubble Sort" />
            <ComboBoxItem Content="Insertion Sort"/>
            <ComboBoxItem Content="Quick Sort"/>
            <ComboBoxItem Content="TimSort" />
            <ComboBoxItem Content="Matrix Multiplication" />
            <ComboBoxItem Content="ShellSort" />
        </ComboBox>
        <Button Name="ButtonСalculation" Click="ButtonСalculation_Click" Content="Начать расчет" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Height="20" Margin="10"></Button>
    </Grid>
</Window>